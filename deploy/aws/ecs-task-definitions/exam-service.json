{
  "family": "pa-study-hub-exam-service",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::ACCOUNT_ID:role/pa-study-hub-task-execution-role",
  "taskRoleArn": "arn:aws:iam::ACCOUNT_ID:role/pa-study-hub-task-role",
  "containerDefinitions": [
    {
      "name": "exam-service",
      "image": "ACCOUNT_ID.dkr.ecr.REGION.amazonaws.com/pa-study-hub/exam-service:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8082,
          "protocol": "tcp"
        }
      ],
      "environment": [
        { "name": "SPRING_PROFILES_ACTIVE", "value": "docker" },
        { "name": "DB_PORT",               "value": "5432" },
        { "name": "PROGRESS_SERVICE_URL",  "value": "http://study-progress-service.pa-study-hub.local:8083" }
      ],
      "secrets": [
        { "name": "DB_HOST",     "valueFrom": "arn:aws:ssm:REGION:ACCOUNT_ID:parameter/pa-study-hub/exam-service/db-host" },
        { "name": "DB_NAME",     "valueFrom": "arn:aws:ssm:REGION:ACCOUNT_ID:parameter/pa-study-hub/exam-service/db-name" },
        { "name": "DB_USERNAME", "valueFrom": "arn:aws:ssm:REGION:ACCOUNT_ID:parameter/pa-study-hub/exam-service/db-username" },
        { "name": "DB_PASSWORD", "valueFrom": "arn:aws:secretsmanager:REGION:ACCOUNT_ID:secret:pa-study-hub/exam-service/db-password" },
        { "name": "JWT_SECRET",  "valueFrom": "arn:aws:secretsmanager:REGION:ACCOUNT_ID:secret:pa-study-hub/jwt-secret" }
      ],
      "healthCheck": {
        "command": ["CMD-SHELL", "wget -q --spider http://localhost:8082/actuator/health || exit 1"],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      },
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group":         "/ecs/pa-study-hub/exam-service",
          "awslogs-region":        "REGION",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}
